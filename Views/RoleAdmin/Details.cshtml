@model IEnumerable<WebApp.Models.ApplicationUser>

@{
    var role = ViewBag.Role as WebApp.Models.ApplicationRole;
    ViewBag.Title = "Role Details";
}

<h2>Role: @role?.Name</h2>

<p>
    @Html.ActionLink("Add User to Role", "AddUser", new { id = role?.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Manage Permissions", "ManagePermissions", new { id = role?.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>

<h3>Users in role</h3>
@using (Html.BeginForm("RemoveUsers", "RoleAdmin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", role.Id)
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>UserName</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td><input type="checkbox" name="userIds" value="@user.Id" /></td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-danger">Remove Selected</button>
}